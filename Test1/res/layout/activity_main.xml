<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/activity_main_ime_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="31dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/activity_main_ime_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity_main_prezime_edit_text"
        android:layout_toLeftOf="@+id/activity_main_ime_edit_text"
        android:text="Ime" />

    <TextView
        android:id="@+id/activity_main_prezime_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/activity_main_prezime_edit_text"
        android:layout_toLeftOf="@+id/activity_main_prezime_edit_text"
        android:text="Prezime" />

    <Button
        android:id="@+id/activity_main_tipka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_main_prezime_edit_text"
        android:layout_marginTop="88dp"
        android:layout_toRightOf="@+id/activity_main_prezime_textView"
        android:text="@string/tipka" />

    <Button
        android:id="@+id/activity_main_tipka2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/activity_main_tipka"
        android:layout_alignBottom="@+id/activity_main_tipka"
        android:layout_toRightOf="@+id/activity_main_tipka"
        android:text="@string/tipka2" />

    <TextView
        android:id="@+id/activity_main_adresa_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/activity_main_prezime_textView"
        android:layout_below="@+id/activity_main_prezime_textView"
        android:layout_marginTop="35dp"
        android:text="Adresa" />

    <EditText
        android:id="@+id/activity_main_adresa_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/activity_main_adresa_textView"
        android:layout_alignLeft="@+id/activity_main_prezime_edit_text"
        android:ems="10" />

    <EditText
        android:id="@+id/activity_main_prezime_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/activity_main_ime_edit_text"
        android:layout_below="@+id/activity_main_ime_edit_text"
        android:layout_marginTop="16dp"
        android:ems="10" />
    
</RelativeLayout>
